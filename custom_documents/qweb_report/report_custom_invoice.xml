                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="lines[o.id]" t-as="l">
                          <tr>
                            <td>
                              <span t-esc="l['ref']"/>
                            </td>
                            <td>
                                <span t-esc="l['des']"/>
                            </td>
                            <td class="text-right">
                                <span t-esc="l['iva']"/>
                            </td>
                            <td class="text-right">
                                <span t-esc="l['qty']"/>
                            </td>
                            <td>
                                <span t-esc="l['unit']"/>
                            </td>
                            <td class="text-right">
                                <span t-esc="l['pric_price']"/>
                            </td>
                            <td class="text-right">
                                <span t-esc="l['app_price']"/>
